<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:paddingVertical="8dp"
    android:gravity="center">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/tv_plan_detail_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_plan_detail_item">

            <TextView
                android:id="@+id/tv_plan_detail_item_time_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:text="pm"
                android:textColor="@color/black"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/tv_plan_detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLength="5"
                android:text="11:00"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

            <View
                android:layout_width="2dp"
                android:layout_height="4dp"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:background="#9E9E9E" />

            <TextView
                android:id="@+id/tv_plan_detail_item_time_half_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="2"
                android:text="pm"
                android:textColor="@color/black"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/tv_plan_detail_item_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLength="5"
                android:text="11:00"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />

        </LinearLayout>


    <LinearLayout
        android:id="@+id/tv_plan_detail_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/plan_timeline_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="16dp">
            <TextView
                android:id="@+id/tv_plan_detail_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:ems="14"
                android:text="일정 제목메젝메조게몾게몾겜족지sdfㅏ덕지"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_plan_detail_item"
                app:layout_constraintTop_toTopOf="@+id/tv_plan_detail_item" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/ib_plan_detail_timeline_plus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/item_plus_check"
                app:layout_constraintBottom_toBottomOf="@+id/tv_plan_detail_item_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_plan_detail_item_title" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/tv_plan_detail_item_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_plan_detail_item_title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진행자 : "
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_plan_detail_item_presenter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="진행자rkrkasdfasdfasdfasdfasdfasdfasdrksdf"
                android:textColor="@color/black"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/tv_plan_detail_item_title"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장소 : "
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_plan_detail_item_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="장소가 있으면 대략적으로, 없으면 날씨 줄 아예 지움"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_plan_detail_item_weather"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/tv_plan_detail_item_title"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="예상 날씨 : "
                android:textColor="@color/main_blue"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_plan_detail_item_weather"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="19~24도, 맑음 이런 식으로..도 단위???"
                android:textColor="@color/main_blue"
                android:textSize="12dp" />
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
