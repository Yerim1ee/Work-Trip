<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_activity_list_recommended"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tb_activity_list_recommended_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:text="여행 코스"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="16dp">

        <!--칩 영역-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/thema1"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/chips_keyword"
                android:button="@null"
                android:paddingHorizontal="12dp"
                android:text="힐링 코스"
                android:textAlignment="center"
                android:textColor="@drawable/text_selectcolor" />

            <CheckBox
                android:id="@+id/thema2"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/chips_keyword"
                android:button="@null"
                android:paddingHorizontal="12dp"
                android:text="도보 코스"
                android:textAlignment="center"
                android:textColor="@drawable/text_selectcolor" />

            <CheckBox
                android:id="@+id/thema3"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/chips_keyword"
                android:button="@null"
                android:paddingHorizontal="12dp"
                android:text="맛 코스"
                android:textAlignment="center"
                android:textColor="@drawable/text_selectcolor" />

            <CheckBox
                android:id="@+id/thema4"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/chips_keyword"
                android:button="@null"
                android:paddingHorizontal="12dp"
                android:text="캠핑 코스"
                android:textAlignment="center"
                android:textColor="@drawable/text_selectcolor" />
        </LinearLayout>
        <!--칩 영역 끝-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:scrollbars="none">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
        <!--인기-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv"/>

        </LinearLayout>
        <!--인기 끝-->

        <!--목록-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_activity_list_recommended_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/card_list"
                android:layout_gravity="center"
                android:orientation="vertical"
                app:spanCount="2" />

        <!--목록 끝-->

</LinearLayout>
    </ScrollView>
    </LinearLayout>
</LinearLayout>