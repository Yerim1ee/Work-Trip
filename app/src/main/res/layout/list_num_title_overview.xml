<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="27dp"
            android:background="@color/main_blue"
            android:id="@+id/v_list_num_title_overview"
            android:visibility="visible"/>
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardCornerRadius="8dp"
            android:outlineProvider="none"
            android:id="@+id/list_num_title_overview"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_list_num_title_overview_num"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:background="@drawable/circle_filled"
                    android:textColor="@color/white"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"

                    android:text="1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_list_num_title_overview_title"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginLeft="12dp"
                        android:maxLines="2"
                        android:ellipsize="end"

                        android:text="코스코스코스코스코스코스코스코스코스코스코스코스코스코스코스코스"/>

                    <TextView
                        android:id="@+id/tv_list_num_title_overview_overview"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="12dp"
                        android:maxLines="1"
                        android:ellipsize="end"

                        android:text="코스코스코스코스코스코스코스코스코스코스코스코스코스코스코스코스"/>
                </LinearLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true"
                    app:riv_corner_radius="8dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/iv_list_num_title_overview_img"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

