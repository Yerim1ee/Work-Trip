<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingVertical="20dp"
    android:layout_marginHorizontal="40dp"
    >

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예산 변경하기"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_dialog_budget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textAlignment="textEnd"
        android:text="1000"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@id/won"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView10" />

    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 원"
        android:textAlignment="textStart"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/ed_dialog_budget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ed_dialog_budget"
        app:layout_constraintTop_toTopOf="@id/ed_dialog_budget" />

    <ImageButton
        android:id="@+id/ib_dialog_budget_back"
        android:layout_width="80.12dp"
        android:layout_height="29.99dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/dialog_back01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_dialog_budget" />


    <ImageButton
        android:id="@+id/ib_dialog_budget_done"
        android:layout_width="80.12dp"
        android:layout_height="29.99dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_done01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_dialog_budget" />

</androidx.constraintlayout.widget.ConstraintLayout>