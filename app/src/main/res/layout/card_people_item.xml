<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp"
        android:background="@drawable/line_gray_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_plan_people_card_name"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginStart="20dp"
            android:text="사용자 이름"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_plan_people_card_manager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/tv_plan_people_card_manager"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@drawable/line_blue_8"
            android:includeFontPadding="false"
            android:text="기획자"
            android:clickable="false"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toStartOf="@id/ib_plan_people_card_plus"
            app:layout_constraintTop_toTopOf="@id/tv_plan_people_card_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_plan_people_card_name"/>

        <Button
            android:id="@+id/tv_plan_people_card_participant"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="false"
            android:background="@drawable/fill_gray_8"
            android:includeFontPadding="false"
            android:text="참가자"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/tv_plan_people_card_name"
            app:layout_constraintEnd_toStartOf="@id/ib_plan_people_card_plus"
            app:layout_constraintTop_toTopOf="@id/tv_plan_people_card_name" />

        <ImageButton
            android:id="@+id/ib_plan_people_card_plus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/item_plus_check_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_plan_people_card_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_plan_people_card_name"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>