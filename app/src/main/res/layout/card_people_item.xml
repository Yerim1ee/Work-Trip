<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/line_gray_8"
    android:padding="20dp"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/tv_plan_people_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textSize="15dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/tv_plan_people_card_manager"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/line_blue_8"
        android:includeFontPadding="false"
        android:text="기획자"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@id/ib_plan_people_card_plus"
        app:layout_constraintTop_toTopOf="@id/tv_plan_people_card_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_plan_people_card_name"/>

    <Button
        android:id="@+id/tv_plan_people_card_participant"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/fill_gray_8"
        android:includeFontPadding="false"
        android:text="참가자"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@id/ib_plan_people_card_plus"
        app:layout_constraintTop_toTopOf="@id/tv_plan_people_card_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_plan_people_card_name"/>

    <ImageButton
        android:id="@+id/ib_plan_people_card_plus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/item_plus_check_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_plan_people_card_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_plan_people_card_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>