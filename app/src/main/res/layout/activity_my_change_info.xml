                app:layout_constraintStart_toStartOf="@+id/tv_my_change_info_food"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_change_info_food">

                <RadioGroup
                    android:id="@+id/rg_my_change_info_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_my_change_info_food1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:checked="true"
                        android:paddingHorizontal="10dp"
                        android:text="한식"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_food2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="서양식"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_food3"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="중식"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_food4"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="일식"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
