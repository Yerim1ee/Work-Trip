                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="이색음식점"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_food6"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="카페/전통찻집"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />


                </RadioGroup>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/tv_my_change_info_travel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:text="관광지"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView2"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_my_change_info_food"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_change_info_travel"
                android:scrollbars="none">

                <RadioGroup
                    android:id="@+id/rg_my_change_info_travel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_my_change_info_travel1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="자연관광지"
                        android:checked="true"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_travel2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="관광자원"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_travel3"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="역사관광지"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_travel4"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="체험관광지"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_travel5"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="산업관광지"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_travel6"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="휴양관광지"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_travel7"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="건축/조형물"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />


                </RadioGroup>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/tv_my_change_info_sleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="숙박"
                android:layout_marginTop="28dp"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView3"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_my_change_info_sleep"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_change_info_sleep"
                android:scrollbars="none">

                <RadioGroup
                    android:id="@+id/rg_my_change_info_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep1"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:checked="true"
                        android:paddingHorizontal="10dp"
                        android:text="한옥"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="게스트하우스"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep3"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="펜션"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep4"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="관광호텔"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep5"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="모텔"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep6"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="유스호스텔"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep7"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="민박"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                    <RadioButton
                        android:id="@+id/rb_my_change_info_sleep8"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/sign_up_check_style1"
                        android:button="@null"
                        android:paddingHorizontal="10dp"
                        android:text="콘도미디엄"
                        android:textAlignment="center"
                        android:textColor="@drawable/sign_up_textcolor1" />

                </RadioGroup>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/tv_my_change_info_reports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:text="레포츠"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView3" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView4"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/tv_my_change_info_reports"
                app:layout_constraintTop_toBottomOf="@+id/tv_my_change_info_reports"
