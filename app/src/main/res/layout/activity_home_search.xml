<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_activity_home_search"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        tools:ignore="MissingConstraints"/>
    <!--검색창-->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/sv_activity_home_search"
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/searchview_filled"
        app:queryBackground="@null"
        app:queryHint="검색어를 입력해 주세요."
        app:searchIcon="@drawable/icon_search_blue"
        app:iconifiedByDefault="false" />
    <!--검색창 끝-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="필터"/>

    <!--카테고리-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="카테고리"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                >
                <CheckBox
                    android:id="@+id/cb_activity_home_search_course"
                    android:layout_width="76dp"
                    android:layout_height="92dp"
                    android:background="@drawable/chips_keyword"
                    android:button="@null"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_cate_corse"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_blue"
                    android:layout_gravity="center_horizontal"
                    android:text="코스"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                >
                <CheckBox
                    android:id="@+id/cb_activity_home_search_lodging"
                    android:layout_width="76dp"
                    android:layout_height="92dp"
                    android:background="@drawable/chips_keyword"
                    android:button="@null"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_cate_lodging"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_blue"
                    android:layout_gravity="center_horizontal"
                    android:text="숙소"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                >
                <CheckBox
                    android:id="@+id/cb_activity_home_search_program"
                    android:layout_width="76dp"
                    android:layout_height="92dp"
                    android:background="@drawable/chips_keyword"
                    android:button="@null"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_cate_program"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_blue"
                    android:layout_gravity="center_horizontal"
                    android:text="프로그램"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                >
                <CheckBox
                    android:id="@+id/cb_activity_home_search_food"
                    android:layout_width="76dp"
                    android:layout_height="92dp"
                    android:background="@drawable/chips_keyword"
                    android:button="@null"
                    android:layout_gravity="center"
                    />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_cate_food"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:textSize="12sp"
                    android:textColor="@color/main_blue"
                    android:layout_gravity="center_horizontal"
                    android:text="맛집"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <!--카테고리 끝-->

    <!--지역-->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="지역"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="16dp">
        <Spinner
            android:id="@+id/sp_activity_home_search_location"

            android:paddingHorizontal="16dp"
            android:layout_centerHorizontal="true"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/chips_keyword"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_arrow_bottom"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="24dp"/>

    </FrameLayout>

    <!--지역 끝-->

</LinearLayout>