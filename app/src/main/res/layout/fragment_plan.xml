<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Plan.PlanFragment"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_plan_logo"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/logo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_plan_plus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/plan_main_plus"
        android:layout_marginRight="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plan_logo"
        app:layout_constraintEnd_toStartOf="@+id/ib_plan_question"
        app:layout_constraintTop_toTopOf="@+id/iv_plan_logo" />

    <ImageButton
        android:id="@+id/ib_plan_question"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/plan_main_question"
        app:layout_constraintBottom_toBottomOf="@+id/iv_plan_logo"
        app:layout_constraintEnd_toEndOf="@+id/tl_plan_tab"
        app:layout_constraintTop_toTopOf="@+id/iv_plan_logo" />




    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_plan_tab"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_plan_logo"
        app:tabIndicatorColor="#2757FF"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#2757FF"
        app:tabTextAppearance="@style/tabTextSizeBold"
        app:tabTextColor="#BBBBBE" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_plan_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_plan_tab" />

</androidx.constraintlayout.widget.ConstraintLayout>