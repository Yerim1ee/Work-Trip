<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Community.fragment_community">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Plan.PlanFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_fragment_plan"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="128.45528455284554dp"
            android:layout_height="20dp"
            tools:layout_editor_absoluteX="16dp"
            android:background="@drawable/logo_typo"
            />

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_plan_tab"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_fragment_plan"
        app:tabIndicatorColor="#2757FF"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="#2757FF"
        app:tabTextAppearance="@style/tabTextSizeBold"
        app:tabTextColor="#BBBBBE" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_plan_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_plan_tab" />

</androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ib_plan_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="24dp"
        android:src="@drawable/icon_edit_white"
        app:elevation="6dp"
        app:backgroundTint="@color/main_blue"
        tools:ignore="SpeakableTextPresentCheck"/>
</FrameLayout>