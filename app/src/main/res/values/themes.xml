<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 상단 바 제거 -->
    <style name="Theme.WorkTrip" parent="Theme.MaterialComponents.Light.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView"/>

    <!--바텀시트-->
    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_background</item>
    </style>

    <!--tap layout-->
    <style name="merchandise_tab_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--date_picker_style-->
    <style name="AppThemeMaterial" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#2757FF</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="Theme.SSMemorize" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">#2757FF</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>
</resources>