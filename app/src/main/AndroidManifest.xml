<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--인터넷 권한 허용 -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!--전화 걸기-->
    <uses-permission android:name="android.permission.DIAL_PHONE" />

    <!--kakao map -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkTrip"
        tools:targetApi="31"

        android:networkSecurityConfig="@xml/network_security_config"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ListRecommendedActivity"
            android:exported="false" />

        <activity
            android:name=".ListProgramActivity"
            android:exported="false" />

        <activity
            android:name=".DetailCourseActivity"
            android:exported="false" />

        <activity
            android:name=".DetailLodgingActivity"
            android:exported="false" />

        <activity
            android:name=".DetailProgramActivity"
            android:exported="false" />

        <activity
            android:name=".DetailFoodActivity"
            android:exported="false" />

        <activity
            android:name=".HomeSearchActivity"
            android:exported="false" />

        <activity
            android:name=".NoticeActivity"
            android:exported="false" />


        <!--kakaoMap-->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="c31ebaa9db9fc1ca6c838a6e540e5fdf" />
    </application>

</manifest>