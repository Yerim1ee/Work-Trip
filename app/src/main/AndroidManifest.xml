<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 인터넷 권한 허용 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 전화 걸기 -->
    <uses-permission android:name="android.permission.DIAL_PHONE" /> <!-- kakao map -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".SocketApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkTrip"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Plan.Plan_detail_timeline_date_Activity"
            android:exported="false" />
        <activity
            android:name=".Plan.Plan_workshop_details_Activity"
            android:exported="false"
            android:label="@string/title_activity_plan_workshop_details" />
        <activity
            android:name=".Plan.Plan_workshop_plus_Activity"
            android:exported="false"
            android:theme="@style/AppThemeMaterial" />
        <activity
            android:name=".Plan.Plan_workshop_edit_Activity"
            android:exported="false"
            android:theme="@style/AppThemeMaterial" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".SignUp.LoginActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp.SignUpActivity04"
            android:exported="true" />
        <activity
            android:name=".SignUp.SignUpActivity03"
            android:exported="true" />
        <activity
            android:name=".SignUp.SignUpActivity02"
            android:exported="true" />
        <activity
            android:name=".SignUp.SignUpActivity01"
            android:exported="true" />
        <activity
            android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity"
            android:exported="true"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao${NATIVE_APP_KEY}://oauth" -->
                <data
                    android:host="oauth"
                    android:scheme="@string/kakao_native_key" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home.ListRecommendedActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Home.ListProgramActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Home.DetailCourseActivity"
            android:exported="false" />
        <activity
            android:name=".Home.DetailLodgingActivity"
            android:exported="false"
            android:parentActivityName=".Home.ListRecommendedActivity" />
        <activity
            android:name=".Home.DetailProgramActivity"
            android:exported="false"
            android:parentActivityName=".Home.ListProgramActivity" />
        <activity
            android:name=".Home.DetailFoodActivity"
            android:exported="false"
            android:parentActivityName=".Home.ListRecommendedActivity" />
        <activity
            android:name=".Home.DetailSightActivity"
            android:exported="false" />
        <activity
            android:name=".Home.HomeSearchActivity"
            android:exported="false" />
        <activity
            android:name=".NoticeActivity"
            android:exported="false" />
        <activity
            android:name=".My.BookmarkActivity"
            android:exported="false" /> <!-- kakaoMap -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="c31ebaa9db9fc1ca6c838a6e540e5fdf" />
    </application>

</manifest>